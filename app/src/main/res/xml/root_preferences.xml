<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Регион">
        <SwitchPreferenceCompat
            app:key="coordinates"
            android:disableDependentsState="true"
            app:title="Определить координаты"/>

        <EditTextPreference
            android:dependency="coordinates"

            app:defaultValue="Tashkent"
            app:key="city"
            app:title="Город"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Единицы измерения">
        <ListPreference
            app:defaultValue="°C"
            app:entries="@array/scale_entries"
            app:entryValues="@array/scale_values"
            app:key="temp_units"
            app:title="Температура"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Kms"
            app:entries="@array/wind_entries"
            app:entryValues="@array/wind_values"
            app:key="distance_units"
            app:title="Скорость ветра"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>
