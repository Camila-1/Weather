<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ImageViewStyle">
<!--        <item name="layout_constraintWidth_percent">0.1</item>-->
<!--        <item name="layout_constraintDimensionRatio">1:1</item>-->
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundColor">@android:color/holo_blue_light</item>
        <item name="background">@android:color/holo_blue_light</item>
    </style>

    <style name="TableStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title_style">
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="data_style">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="header_style">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="description_style">
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="date_style">
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
