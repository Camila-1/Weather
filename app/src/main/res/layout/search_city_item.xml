<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/found_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/found_city"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon="@drawable/ic_baseline_add_24"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        style="?android:attr/borderlessButtonStyle"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp">

        <TableRow>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/day_of_week_0"
                style="@style/TableStyle"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/day_of_week_1"
                style="@style/TableStyle"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/day_of_week_2"
                style="@style/TableStyle"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/day_of_week_3"
                style="@style/TableStyle"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/day_of_week_4"
                style="@style/TableStyle"/>
        </TableRow>

        <TableRow>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_0"
                style="@style/TableStyle"
                app:layout_constraintWidth_percent=".2"
                app:layout_constraintDimensionRatio="1:1"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_1"
                style="@style/TableStyle"
                app:layout_constraintWidth_percent=".2"
                app:layout_constraintDimensionRatio="1:1"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_2"
                style="@style/TableStyle" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_3"
                style="@style/TableStyle" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_4"
                style="@style/TableStyle" />
        </TableRow>

        <TableRow>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/max_0"
                style="@style/TableStyle"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/max_1"
                style="@style/TableStyle"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/max_2"
                style="@style/TableStyle"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/max_3"
                style="@style/TableStyle"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/max_4"
                style="@style/TableStyle"/>
        </TableRow>

        <TableRow>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/min_0"
                style="@style/TableStyle"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/min_1"
                style="@style/TableStyle"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/min_2"
                style="@style/TableStyle"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/min_3"
                style="@style/TableStyle"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/min_4"
                style="@style/TableStyle"/>
        </TableRow>

    </TableLayout>





</androidx.constraintlayout.widget.ConstraintLayout>